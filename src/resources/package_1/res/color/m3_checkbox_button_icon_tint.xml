<?xml version='1.0' encoding='utf-8' ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:esemtia="http://schemas.android.com/apk/res-auto">
  <item android:state_enabled="false"
        android:color="?attr/colorSurface" />
  <item android:color="?attr/colorOnError"
        esemtia:state_error="true" />
  <item android:color="?attr/colorOnPrimary"
        esemtia:state_indeterminate="true" />
